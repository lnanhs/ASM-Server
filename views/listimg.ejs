<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>List image</title>
</head>
<body class="container" style="background-image: url('https://worldofprintables.com/wp-content/uploads/2021/11/Clouds-January-2022-Calendar-Desktop-Wallpaper.jpg')">
<% include nav %>
<hr class="dropdown-divider">
<div style="margin-top: 10px" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <%for(var i = 0 ; i < data.length ; i++) { %>
        <div class="col">
            <div class="card shadow-sm">
                <img  style="padding: 20px"  width="420px" height="420px" src=" <%= data[i].linkanh %>">
                <div class="card-body">
                    <p class="card-text"> <%= data[i].name %>  </p>
                    <p class="card-text"> <%= data[i].content %>  </p>
                    <p class="card-text"> <%= data[i].date %>  </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <form style="background-color: #ffccff" method="post" action="/delete" enctype="application/x-www-form-urlencoded">
                                <input type="hidden" name="id" value="<%= data[i]._id%>">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Xóa</button>
                            </form>
                            <form method="post" action="/updateanh" enctype="application/x-www-form-urlencoded">
                                <a href="/updateimg" >
                                    <button style="margin-left: 30px;background-color: #ffccff" class="btn btn-sm btn-outline-secondary" name="idupdate" type="submit" value="<%= data[i]._id %>">
                                        Sửa
                                    </button>
                                    <input type="hidden" name="id" value="<%= data[i]._id%>">
                                </a>
                            </form>
                        </div>
                        <div class="post_meta uk-grid uk-grid-small">
                            <div class="post_date uk-width-auto"><span class="uk-margin-small-right uk-icon" data-uk-icon="icon: clock; ratio: .7"><svg width="14" height="14" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" data-svg="clock"><circle fill="none" stroke="#000" stroke-width="1.1" cx="10" cy="10" r="9"></circle><rect x="9" y="4" width="1" height="7"></rect><path fill="none" stroke="#000" stroke-width="1.1" d="M13.018,14.197 L9.445,10.625"></path></svg></span><span><time class="published" datetime="2022-04-07T19:17:00+07:00" title="2022-04-07T19:17:00+07:00">    7:17 PM</time></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

</div>
<!-- Optional JavaScript; choose one of the two! -->

<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

